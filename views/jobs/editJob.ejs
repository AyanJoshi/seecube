<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-plus-square"></i>  Add New Job</h1>
        <form action="/jobs/<%=job._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="company">Company Name</label>
            <input
              type="text"
              id="company"
              name="company"
              class="form-control"
              value="<%= job.company%>"/>
          </div>
          <div class="form-group">
            <label for="position">Job Position</label>
            <input
              type="text"
              id="position"
              name="position"
              class="form-control"
              value="<%= job.position%>"/>
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input
              type="text"
              id="location"
              name="location"
              class="form-control"
              value="<%= job.location%>"/>
          </div>
          <div class="form-group">
            <label for="body">Description</label>
            <br>
            <textarea 
                class="form-control"
                id="mytextarea"
                name="body"
                rows="20"><%= job.body%></textarea>
          </div>
          <div class="form-group">
            <label for="role_type">Role Type</label>
            <select id="role_type" class="form-control" name="role_type">
                <option selected><%= job.role_type %></option>
                <option>Internship</option>
                <option>Full-Time</option>
                <option>Part-Time</option>
            </select>
          </div>
          <div class="form-group">
            <label for="apply">Apply Link</label>
            <input
              type="text"
              id="apply"
              name="apply"
              class="form-control"
              value="<%= job.apply%>"/>
          </div>
          <div class="form-group">
            <label for="image">Company Logo (Preferably 180x150 px)</label>
              <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
              class="form-control"
              placeholder="Enter Description"
              required/></div>
          </div>
          <button type="submit" class="btn btn-dark btn-block">Submit</button>
        </form>
      </div>
    </div>
  </div>