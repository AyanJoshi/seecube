<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-plus-square"></i>  Edit <%=problems.title%></h1>
        <%- include ('../partials/messages') %>
        <form action="/problems/<%=problems._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              value="<%= problems.title %>"
            />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <br>
            <textarea
                placeholder="Full problem description"
                class="form-control"
                id="description" 
                name="description" 
                rows="4"><%= problems.body.description %>
            </textarea>
          </div>
          <div class="form-group">
            <label for="example">Example</label>
            <textarea 
                class="form-control"
                id="example" 
                name="example" 
                rows="4"><%= problems.body.example %>
            </textarea>
          </div>
          <div class="form-group">
            <label for="limits">Limits</label>
            <textarea 
                class="form-control"
                id="limits" 
                name="limits" 
                rows="4"><%= problems.body.limits %>
            </textarea>
          </div>
          <div class="form-group">
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" class="form-control" name="difficulty">
                <option selected><%= problems.body.difficulty %></option>
                <option>Easy</option>
                <option>Medium</option>
                <option>Hard</option>
            </select>
          </div>
          <div class="form-group">
            <label for="year">Year</label>
            <select id="year" class="form-control" name="year">
                <option selected><%= problems.body.year %></option>
                <option>Freshmen</option>
                <option>Sophomore</option>
                <option>Junior</option>
                <option>Senior</option>
            </select>
          </div>
          <div class="form-group">
            <label for="input">Enter Test Inputs</label>
            <br>
            <textarea
                placeholder=""
                class="form-control" 
                id="input" 
                name="input" 
                rows="4"
                required><%= problems.body.input %></textarea>
          </div>
          <div class="form-group">
            <label for="output">Enter Test Outputs</label>
            <br>
            <textarea
                placeholder=""
                class="form-control" 
                id="output" 
                name="output" 
                rows="4"
                required><%= problems.body.output %></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
      </div>
    </div>
  </div>