<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-plus-square"></i> Add New Resource</h1>
        <form action="/resources/<%=resources._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  class="form-control"
                  value="<%= resources.title%>"
                />
              </div>
          <div class="form-group">
            <label for="instructors">Instructors</label>
            <br>
            <textarea placeholder="List the instructors" class="form-control" id="mytextarea" name="instructors"
              rows="14" required><%= resources.instructors %></textarea>
          </div>
          <div class="form-group">
            <label for="videos">Videos</label>
            <br>
            <textarea placeholder="List the video URLs" class="form-control" id="mytextarea" name="videos"
              rows="14" required><%= resources.videos%></textarea>
          </div>
          <button type="submit" class="btn btn-dark btn-block" onclick="myFunction_problem()">Submit</button>
        </form>
      </div>
    </div>
  </div>